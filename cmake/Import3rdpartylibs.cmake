FINDLIBHOME(BOOST_HOME)
IF(MSVC)
    IF("${BOOST_HOME}" MATCHES "NOT FOUND")
        SET(TIPS_BOOST_NOFOUND "The environment variable \"BOOST_HOME\" pointing to the boost library
    installation directory is not defined, which is required for the compilation.")
        MESSAGE(FATAL_ERROR ${TIPS_BOOST_NOFOUND})
    ELSE()
        INCLUDE_DIRECTORIES("${BOOST_HOME}")
        MESSAGE("${BOOST_HOME}")
    ENDIF()
ELSE(MSVC)
    FIND_PACKAGE(BOOST REQUIRED)
    IF(BOOST_FOUND)
        INCLUDE_DIRECTORIES("${BOOST_HOME}/include")
        LINK_DIRECTORIES("${Boost_LIB_DIR}")
        MESSAGE("${BOOST_HOME}/include")
        MESSAGE("${Boost_LIB_DIR}")
        MESSAGE("${Boost_LIBRARIES}")
    ELSE(BOOST_FOUND)
        MESSAGE(FATAL_ERROR "Boost library not found")
    ENDIF(BOOST_FOUND)
ENDIF(MSVC)